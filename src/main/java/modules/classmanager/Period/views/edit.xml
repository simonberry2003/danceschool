<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view name="edit" title="Period" xmlns="http://www.skyve.org/xml/view"
	xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd"
	xmlns:c="http://www.skyve.org/xml/common"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<form border="true" borderTitle="Period Details">
		<column percentageWidth="10"/>
		<column percentageWidth="20"/>
		<column percentageWidth="10"/>
		<column percentageWidth="20"/>
		<column/>
		<row>
			<item>
				<default binding="name" />
			</item>
		</row>
		<row>
			<item>
				<default binding="start" />
			</item>
		</row>
		<row>
			<item>
				<default binding="end" />
			</item>
		</row>
		<row>
			<item>
				<checkBox binding="active" triState="false" />
			</item>
		</row>
	</form>
	<actions>
		<defaults/>
	</actions>
</view>
